<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Set 3D graph Options"
        android:textColor="@color/black"
        android:textSize="@dimen/size4"
        android:fontFamily="@font/internet_bold"
        android:textAlignment="center"
        android:gravity="center"></TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/x_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x_options"
            android:text="X :"
            android:textColor="@color/black"
            android:fontFamily="@font/internet_regular"
            android:textSize="@dimen/size3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></TextView>

        <RadioGroup
            android:id="@+id/x_radio_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/x_options"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <RadioButton
                android:id="@+id/x_input_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input"
                android:fontFamily="@font/internet_regular"
                android:textSize="@dimen/size3"></RadioButton>
            <RadioButton
                android:id="@+id/x_output_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Output"
                android:fontFamily="@font/internet_regular"
                android:textSize="@dimen/size3"></RadioButton>
        </RadioGroup>
        <TextView
            android:id="@+id/x_tv"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No."
            android:textColor="@color/black"
            android:textSize="@dimen/size3"
            android:fontFamily="@font/internet_regular"
            app:layout_constraintLeft_toRightOf="@id/x_radio_group"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>
        <EditText
            android:id="@+id/x_edit_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:fontFamily="@font/internet_regular"
            android:textSize="@dimen/size3"
            app:layout_constraintLeft_toRightOf="@id/x_tv"></EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/y_layout"
        app:layout_constraintTop_toBottomOf="@id/x_layout"
        app:layout_constraintBottom_toTopOf="@id/z_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/y_options"
            android:text="Y :"
            android:textColor="@color/black"
            android:fontFamily="@font/internet_regular"
            android:textSize="@dimen/size3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></TextView>

        <RadioGroup
            android:id="@+id/y_radio_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/y_options"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <RadioButton
                android:id="@+id/y_input_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input"
                android:fontFamily="@font/internet_regular"
                android:textSize="@dimen/size3"></RadioButton>
            <RadioButton
                android:id="@+id/y_output_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Output"
                android:fontFamily="@font/internet_regular"
                android:textSize="@dimen/size3"></RadioButton>
        </RadioGroup>
        <TextView
            android:id="@+id/y_tv"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No."
            android:textColor="@color/black"
            android:textSize="@dimen/size3"
            android:fontFamily="@font/internet_regular"
            app:layout_constraintLeft_toRightOf="@id/y_radio_group"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>
        <EditText
            android:id="@+id/y_edit_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:fontFamily="@font/internet_regular"
            android:textSize="@dimen/size3"
            app:layout_constraintLeft_toRightOf="@id/y_tv"></EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/z_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/y_layout"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/z_options"
            android:text="Z :"
            android:textColor="@color/black"
            android:fontFamily="@font/internet_regular"
            android:textSize="@dimen/size3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></TextView>

        <RadioGroup
            android:id="@+id/z_radio_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/z_options"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <RadioButton
                android:id="@+id/z_input_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input"
                android:fontFamily="@font/internet_regular"
                android:textSize="@dimen/size3"></RadioButton>
            <RadioButton
                android:id="@+id/z_output_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Output"
                android:fontFamily="@font/internet_regular"
                android:textSize="@dimen/size3"></RadioButton>
        </RadioGroup>
        <TextView
            android:id="@+id/z_tv"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No."
            android:textColor="@color/black"
            android:textSize="@dimen/size3"
            android:fontFamily="@font/internet_regular"
            app:layout_constraintLeft_toRightOf="@id/z_radio_group"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"></TextView>
        <EditText
            android:id="@+id/z_edit_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:fontFamily="@font/internet_regular"
            android:textSize="@dimen/size3"
            app:layout_constraintLeft_toRightOf="@id/z_tv"></EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/graph_options_submit"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/z_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textSize="@dimen/size3"
        android:fontFamily="@font/internet_bold"></Button>




</androidx.constraintlayout.widget.ConstraintLayout>
